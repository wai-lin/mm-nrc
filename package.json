{
  "repository": {
    "type": "git",
    "url": "https://github.com/wai-lin/mm-nrc"
  },
  "version": "0.1.3",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "dts watch",
    "build": "dts build",
    "test": "dts test",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "commit": "git add -A && cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "mm-nrc",
  "author": "wai-lin",
  "module": "dist/mm-nrc.esm.js",
  "size-limit": [
    {
      "path": "dist/mm-nrc.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/mm-nrc.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^6.0.3",
    "@tsconfig/recommended": "^1.0.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dts-cli": "^0.19.4",
    "husky": "^7.0.4",
    "size-limit": "^6.0.3",
    "standard-version": "^9.3.2",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
